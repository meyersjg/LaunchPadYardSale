
  <section class="hero">
    <div class="row">
      <div class="heroWrapper col-md-10 col-md-offset-1">
        <%= image_tag('https://s3-us-west-2.amazonaws.com/launchpadyardsale/lplab.png', :class => "img-responsive") %>
        <h1>Yard Sale!</h1>
      </div>
    </div>
  </section>

  <section id="intro">
    <div class="introContainer row">
      <p>
        The guys here at LaunchPad Lab are moving up in the world and relocating to the trendy River North neighborhood. We don't have room for all of our old desks and chairs. Would you kindly purchase our Scandinavian made stuff?
      </p>
    </div>
  </section>

<div class="container">
  <section class="productGrid row">
    <div class="productWrapper col-md-10 col-md-offset-1">
      <ul>
        <% @products.where(is_ordered: false).each do |product| %>
          <li>
            <div class="productContainer col-md-3 col-sm-6">
              <div class="productOverlay" style="height: 272px;">
                <%= link_to 'Purchase', new_order_path(product_id: product.id), class: 'btn btn-primary btn-lg blue-btn' %>
              </div>
              <%= image_tag(product.image_url, :class => "img-responsive") %>
              <div class="productInfo">
                <h3>
                  <%= product.name %>
                </h3>
                <p>
                  $<%= product.price %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </section>

  <a href="#" class="scrollToTop"><i class="fa fa-arrow-circle-up"></i></a>


  <div class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <p>
            Purchase this product
          </p>
        </div>
        <div class="modal-body">

          <%= form_tag(orders_url, method: 'post') do %>

            <%= label_tag :full_name %>:
            <%= text_field_tag :full_name %><br/>

            <%= label_tag :email %>:
            <%= email_field_tag :email %><br/>

            <%= label_tag :creditcard %>:
            <%= text_field_tag :creditcard %><br/>

            <%= label_tag :expiration_date %>:
            <%= date_field_tag :expiration_date %><br/>

          <%= submit_tag "Submit Order" %>
        <% end %>

        </div>
      </div>
    </div>
  </div>

</div>
